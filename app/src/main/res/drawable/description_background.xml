<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="16dp"
    android:insetRight="16dp"> <!-- Отступы от левого и правого края страницы -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <corners android:radius="20dp" /> <!-- Задайте радиус, чтобы определить степень округления углов -->
        <solid android:color="#FFFFFF" /> <!-- Задайте цвет фона -->
        <padding
            android:left="10dp"
            android:right="10dp"
            android:top="10dp"
            android:bottom="10dp" /> <!-- Отступы от информации внутри -->
    </shape>

</inset>
